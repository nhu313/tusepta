<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ListItem01"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:gravity="center_vertical">

	<ImageView android:id="@+id/ListItem01Icon" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:layout_alignParentLeft="true" />

	<TextView android:id="@+id/ListItem01Text" android:layout_height="wrap_content"
		android:layout_marginLeft="10dip" android:textSize="24sp" android:minHeight="40px"
		android:textColor="#000000" android:layout_width="wrap_content"
		android:layout_toRightOf="@+id/ListItem01Icon" android:gravity="center_vertical" />

	<CheckBox android:id="@+id/ListItem01Check" android:gravity="center"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_alignParentRight="true" />
		
</RelativeLayout>
