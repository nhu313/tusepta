<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
  android:background="#dddddd" android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/header_menu" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="right"> 
		<TextView android:paddingRight="0px" android:paddingLeft="10px" android:id="@+id/header_t_mysched" android:layout_height="20px" 
			android:layout_width="wrap_content" android:typeface="sans" android:textSize="15px" 
			android:gravity="center_vertical|center_horizontal" android:text="MySchedule |" android:textColor="#041e2e"></TextView>  
		<TextView android:paddingRight="10px" android:paddingLeft="05px" android:id="@+id/header_t_news" android:layout_height="20px" 
			android:layout_width="wrap_content" android:typeface="sans" android:textSize="15px" 
			android:gravity="center_vertical|center_horizontal" android:text="News" android:textColor="#041e2e"></TextView>
		<TextView android:paddingRight="10px" android:paddingLeft="10px" android:id="@+id/header_t_search" android:layout_height="20px" 
		android:layout_width="wrap_content" android:typeface="sans" android:textSize="15px" android:background="#041e2e"  
		android:gravity="center_vertical|center_horizontal" android:text="Search" android:textColor="#dddddd"></TextView>
		<TextView android:paddingRight="10px" android:paddingLeft="10px" android:id="@+id/header_t_options" android:layout_height="20px" 
		android:layout_width="wrap_content" android:typeface="sans" android:textSize="15px" 
			android:gravity="center_vertical|center_horizontal" android:text="Options" android:textColor="#041e2e"></TextView>
	</LinearLayout>
	
	<ImageView android:background="#041e2e" android:layout_below="@+id/header_menu" android:layout_width="wrap_content" android:id="@+id/header_icon" android:src="@drawable/septaicon" android:layout_height="40px"></ImageView>
	<TextView android:layout_toRightOf="@+id/header_icon" android:layout_below="@+id/header_menu" android:layout_width="fill_parent" android:id="@+id/header_title" android:background="#041e2e" android:typeface="sans" android:paddingRight="5px" android:paddingBottom="3px" android:layout_height="40px" android:gravity="right|bottom" android:textSize="20px" android:text="SEARCH"></TextView>
	<TextView android:layout_height="2px" android:layout_width="fill_parent" android:background="#ffffff" android:layout_below="@+id/header_icon" android:id="@+id/line_below_title"></TextView>
	
	<TextView android:id="@+id/search_row_title" android:layout_height="wrap_content"  android:layout_width="fill_parent" android:layout_below="@+id/line_below_title" android:textColor="#880000" android:textStyle="bold" android:typeface="sans"></TextView>
	<TextView android:layout_height="1px" android:layout_width="fill_parent" android:background="#555555" android:layout_below="@+id/search_row_title" android:id="@+id/line_below_row_title"></TextView>
	<ListView android:layout_width="fill_parent" android:layout_height="fill_parent"  
	android:layout_below="@+id/line_below_row_title" android:typeface="sans" android:textSize="15px" android:id="@+id/search_list"></ListView>


</RelativeLayout>