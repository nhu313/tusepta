<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/LayoutForHeadline">
		<TextView android:id="@+id/RouteListTitle"
			android:layout_height="wrap_content" android:text="Search Time Schedule"
			android:textColor="#FFFFFF" android:gravity="center"
			android:layout_gravity="center" android:layout_width="fill_parent"
			android:background="@android:drawable/alert_dark_frame">
		</TextView>
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_gravity="center"
		android:gravity="center">
		<EditText android:id="@+id/txttime" android:layout_width="wrap_content"
	android:layout_height="47px" android:text="00.00" android:textSize="18sp">
		</EditText>
		<Spinner android:id="@+id/Spinner01" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="AM"
			android:textSize="18sp"  />
		<Button android:id="@+id/bntsearchtime"
			android:layout_height="wrap_content" android:width="90px"
			android:text="Update time" android:layout_width="wrap_content"
			android:layout_marginTop="0px" android:drawableLeft="@drawable/edit"></Button>
		<Button android:id="@+id/bntexit"
			android:layout_height="wrap_content" android:width="50px"
			android:text="Exit" android:layout_width="wrap_content"
			android:layout_marginTop="0px"></Button>
	</LinearLayout>
	<ListView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@id/android:list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="@android:drawable/alert_dark_frame">
	</ListView>
	
</LinearLayout>