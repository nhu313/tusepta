<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
  android:background="#dddddd" 
  android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/header_menu" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="right"> 
		<TextView android:paddingRight="10px" android:paddingLeft="10px" android:id="@+id/header_t_mysched" android:layout_height="20px" android:layout_width="wrap_content" android:background="#041e2e" android:typeface="sans" android:textSize="15px" android:gravity="center_vertical|center_horizontal" android:text="MySchedule"></TextView>  
		<TextView android:paddingRight="10px" android:paddingLeft="10px" android:id="@+id/header_t_news" android:layout_height="20px" android:layout_width="wrap_content" android:textColor="#041e2e" android:background="#dddddd" android:text="News |"></TextView>
		<TextView android:paddingRight="10px" android:layout_height="20px" android:layout_width="wrap_content" android:textColor="#041e2e" android:id="@+id/header_t_search" android:background="#dddddd" android:text="Search |"></TextView>
		<TextView android:paddingRight="10px" android:layout_height="20px" android:layout_width="wrap_content" android:textColor="#041e2e" android:id="@+id/header_t_setting" android:background="#dddddd" android:text="Setting"></TextView>
	</LinearLayout>
	<TextView android:layout_toRightOf="@+id/header_icon" android:layout_below="@+id/header_menu" android:layout_width="fill_parent" android:id="@+id/header_title" android:background="#041e2e" android:typeface="sans" android:paddingRight="5px" android:paddingBottom="3px" android:layout_height="40px" android:gravity="right|bottom" android:textSize="20px" android:text="MY SCHEDULE"></TextView>
	<TextView android:layout_height="2px" android:layout_width="fill_parent" android:background="#ffffff" android:layout_below="@+id/header_icon" android:id="@+id/line_below_title"></TextView>

	<Spinner android:layout_width="fill_parent" android:layout_below="@+id/line_below_title" android:layout_height="30px" android:layout_marginTop="5px" android:id="@+id/mysched_spinner" android:typeface="sans" android:textSize="15px"></Spinner>
	<ListView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/mysched_listview" android:layout_below="@+id/mysched_spinner" android:typeface="sans" android:textSize="15px"></ListView>
</RelativeLayout>